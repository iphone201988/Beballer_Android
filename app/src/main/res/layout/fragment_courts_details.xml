<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.beballer.beballer.ui.player.dash_board.find.details.CourtsDetailsFragmentVM" />

        <variable
            name="bean"
            type="com.beballer.beballer.data.model.CourtDataById" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            tools:context=".ui.dash_board.find.details.CourtsDetailsFragment">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clDot"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_240sdp"
                android:background="@drawable/bottom_rounded_bg"
                android:elevation="@dimen/_2sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/noCourtPicture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/no_court_picture_image"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_150sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_beballer_grey_800"
                            app:layout_constraintBottom_toTopOf="@id/no_court_picture_tv"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/no_court_picture_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/inter_bold"
                            android:gravity="center"
                            android:paddingHorizontal="5dp"
                            android:text="@string/findCourts_CeTerrainABesoinDUnePhoto"
                            android:textColor="@color/black_000000"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/no_court_picture_image" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_240sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <com.zhpan.indicator.IndicatorView
                        android:id="@+id/dotsIndicator"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_20sdp"
                        app:layout_constraintBottom_toBottomOf="@+id/viewPager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:vpi_slider_checked_color="@color/black"
                        app:vpi_slider_normal_color="@color/grey" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/cancelImage"
                android:layout_width="@dimen/_42sdp"
                android:layout_height="@dimen/_42sdp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="@dimen/_25sdp"
                android:onClick="@{v->vm.onClick(v)}"
                app:cardBackgroundColor="#F8F8F8"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_2sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/back_button"
                    android:tint="@color/black_000000" />

            </androidx.cardview.widget.CardView>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCourtTitle"
                setTextEmptyCheck="@{bean.name}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintEnd_toStartOf="@id/clRatings"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clDot" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clRatings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvCourtTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvCourtTitle">


                <com.github.bilalnasir9.library.ratingbar.CustomRatingBar
                    android:id="@+id/courtRatingBar"
                    setRatings="@{bean.grade}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    app:iconEmpty="@drawable/ic_basketball_empty"
                    app:iconFilled="@drawable/ic_basketball_filled"
                    app:iconHalf="@drawable/ic_basketball_filled"
                    app:iconPadding="4dp"
                    app:iconSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:maxRating="5"
                    app:stepSize="0.5" />

                <TextView
                    android:id="@+id/tvCourtRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="@font/inter_bold"
                    android:includeFontPadding="false"
                    android:textColor="#BFBFBF"
                    android:textSize="@dimen/_12ssp"
                    android:text="@{String.valueOf(bean.grade)}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/courtRatingBar"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCourtElements"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:maxLines="2"
                android:text="@string/findCourts_SurCeTerrain"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvCourtTitle" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCourtPicture"
                setNameCourt="@{bean}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/player_bg"
                android:backgroundTint="@color/white"
                android:drawablePadding="@dimen/_4sdp"
                android:elevation="@dimen/_2sdp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:foreground="@drawable/ripple_effect"
                android:gravity="center"
                android:lines="2"
                android:maxLines="2"
                android:onClick="@{v->vm.onClick(v)}"
                android:paddingHorizontal="4dp"
                android:paddingVertical="10dp"
                android:textColor="@color/blue"
                android:textSize="12sp"
                app:drawableTint="@color/beballer_grey"
                app:drawableTopCompat="@drawable/ic_outline_camera_alt_40"
                app:layout_constraintEnd_toStartOf="@id/tvCourtKing"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvCourtElements" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCourtKing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/player_bg"
                android:backgroundTint="@color/white"
                android:drawablePadding="@dimen/_4sdp"
                android:elevation="@dimen/_2sdp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:foreground="@drawable/ripple_effect"
                android:gravity="center"
                android:lines="2"
                android:maxLines="2"
                android:onClick="@{v->vm.onClick(v)}"
                android:paddingHorizontal="4dp"
                android:paddingVertical="10dp"
                android:text="@string/findCourts_DeviensKingDuTerrain"
                android:textColor="@color/blue"
                android:textSize="12sp"
                app:drawableTint="@android:color/transparent"
                app:drawableTopCompat="@drawable/ic_baseline_square_40"
                app:layout_constraintBottom_toBottomOf="@+id/tvCourtPicture"
                app:layout_constraintEnd_toStartOf="@+id/tvCourtLevel"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tvCourtPicture"
                app:layout_constraintTop_toTopOf="@id/tvCourtPicture" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/king_image"
                style="@style/TextView.InterMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:elevation="11dp"
                android:gravity="center"
                android:includeFontPadding="true"
                android:text="ðŸ‘‘"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="@id/tvCourtKing"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@id/tvCourtKing"
                app:layout_constraintTop_toTopOf="@id/tvCourtKing"
                tools:ignore="HardcodedText" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCourtLevel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/player_bg"
                android:backgroundTint="@color/white"
                android:drawablePadding="@dimen/_4sdp"
                android:elevation="@dimen/_2sdp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:foreground="@drawable/ripple_effect"
                android:gravity="center"
                android:lines="2"
                android:maxLines="2"
                android:paddingHorizontal="4dp"
                android:paddingVertical="10dp"
                android:text="N/A"
                android:textColor="@color/blue"
                android:textSize="12sp"
                app:drawableTint="@color/beballer_grey"
                app:drawableTopCompat="@drawable/ic_round_local_fire_department_40"
                app:layout_constraintBottom_toBottomOf="@+id/tvCourtPicture"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvCourtKing"
                app:layout_constraintTop_toTopOf="@id/tvCourtPicture" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tcCourtWay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:maxLines="2"
                android:text="Go to the court:"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvCourtLevel" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCourtAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/player_bg"
                android:backgroundTint="@color/white"
                android:elevation="@dimen/_2sdp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:gravity="start"
                android:maxLines="5"
                android:paddingVertical="@dimen/_10sdp"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:text="@{bean.address}"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                tools:text="sdssfsdfssdfsddsfsd"
                android:drawablePadding="@dimen/_5sdp"
                app:drawableEndCompat="@drawable/ic_round_arrow_outward_24"
                app:drawableStartCompat="@drawable/ic_baseline_pin_drop_40"
                app:drawableTint="@color/grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tcCourtWay" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCourtAccessibility"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/player_bg"
                android:backgroundTint="@color/white"
                android:elevation="@dimen/_2sdp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:foreground="@drawable/ripple_effect"
                android:gravity="center"
                android:maxLines="2"
                android:paddingVertical="@dimen/_10sdp"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:text="@string/findCourts_AccessibleATous"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/ic_outline_front_hand_40"
                app:drawableTint="@color/grey"
                app:layout_constraintEnd_toStartOf="@+id/tvCourtDistance"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvCourtAddress" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCourtDistance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/player_bg"
                android:backgroundTint="@color/white"
                android:elevation="@dimen/_2sdp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:foreground="@drawable/ripple_effect"
                android:gravity="center"
                android:maxLines="2"
                android:paddingVertical="@dimen/_10sdp"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:drawableStartCompat="@drawable/ic_round_directions_walk_40"
                app:drawableTint="@color/grey"
                app:layout_constraintBottom_toBottomOf="@+id/tvCourtAccessibility"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvCourtAccessibility"
                app:layout_constraintTop_toTopOf="@id/tvCourtAccessibility" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/court_details_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:maxLines="2"
                android:text="Details about the court:"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvCourtDistance" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCourtHoops"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/player_bg"
                android:backgroundTint="@color/white"
                android:elevation="@dimen/_2sdp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:foreground="@drawable/ripple_effect"
                android:gravity="center"
                android:lines="2"
                android:maxLines="2"
                android:paddingHorizontal="4dp"
                android:paddingVertical="10dp"
                android:text='@{bean.hoopsCount+" Hoops"}'
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:drawableTint="@color/grey"
                app:drawableTopCompat="@drawable/ic_court_40"
                app:layout_constraintEnd_toStartOf="@+id/tvCourtNet"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/court_details_tv" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCourtNet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/player_bg"
                android:backgroundTint="@color/white"
                android:elevation="@dimen/_2sdp"
                android:fontFamily="@font/inter_bold"
                android:foreground="@drawable/ripple_effect"
                android:gravity="center"
                android:lines="2"
                android:maxLines="2"
                android:paddingHorizontal="4dp"
                android:paddingVertical="10dp"
                android:text='@{bean.netType+" nets"}'
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:drawableTint="@color/grey"
                app:drawableTopCompat="@drawable/ic_basketball_net"
                app:layout_constraintBottom_toBottomOf="@id/tvCourtHoops"
                app:layout_constraintEnd_toStartOf="@+id/tvCourtBoard"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tvCourtHoops"
                app:layout_constraintTop_toTopOf="@id/tvCourtHoops" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCourtBoard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/player_bg"
                android:backgroundTint="@color/white"
                android:elevation="@dimen/_2sdp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:foreground="@drawable/ripple_effect"
                android:gravity="center"
                android:lines="2"
                android:maxLines="2"
                android:paddingHorizontal="4dp"
                android:paddingVertical="10dp"
                android:text='@{bean.boardType+" board"}'
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:drawableTint="@color/grey"
                app:drawableTopCompat="@drawable/ic_basketball_board"
                app:layout_constraintBottom_toBottomOf="@id/tvCourtHoops"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvCourtNet"
                app:layout_constraintTop_toTopOf="@id/tvCourtHoops" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCourtFloor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/player_bg"
                android:backgroundTint="@color/white"
                android:elevation="@dimen/_2sdp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:foreground="@drawable/ripple_effect"
                android:gravity="center"
                android:lines="2"
                android:maxLines="2"
                android:paddingHorizontal="4dp"
                android:paddingVertical="10dp"
                android:text='@{bean.floorType}'
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:drawableTint="@color/grey"
                app:drawableTopCompat="@drawable/ic_outline_layers_40"
                app:layout_constraintEnd_toStartOf="@+id/tvCourtDimensions"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvCourtBoard" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCourtDimensions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/player_bg"
                android:backgroundTint="@color/white"
                android:elevation="@dimen/_2sdp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:foreground="@drawable/ripple_effect"
                android:gravity="center"
                android:lines="2"
                android:maxLines="2"
                android:paddingHorizontal="4dp"
                android:paddingVertical="10dp"
                android:text='@{bean.areDimensionsStandard ? "Dimensions standard" : "No Dimensions standard"}'
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:drawableTint="@color/grey"
                app:drawableTopCompat="@drawable/ic_round_polyline_40"
                app:layout_constraintBottom_toBottomOf="@+id/tvCourtFloor"
                app:layout_constraintEnd_toStartOf="@+id/tvCourtWaterPoint"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tvCourtFloor"
                app:layout_constraintTop_toTopOf="@id/tvCourtFloor" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCourtWaterPoint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/player_bg"
                android:backgroundTint="@color/white"
                android:elevation="@dimen/_2sdp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:foreground="@drawable/ripple_effect"
                android:gravity="center"
                android:lines="2"
                android:maxLines="2"
                android:paddingHorizontal="4dp"
                android:paddingVertical="10dp"
                android:text='@{bean.hasWaterPoint ? "waterpoint" : "No waterpoint"}'
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:drawableTint="@color/grey"
                app:drawableTopCompat="@drawable/ic_outline_water_drop_40"
                app:layout_constraintBottom_toBottomOf="@+id/tvCourtFloor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tvCourtDimensions"
                app:layout_constraintTop_toTopOf="@id/tvCourtFloor" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCommentaire"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:maxLines="2"
                android:text="Comment:"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvCourtWaterPoint" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTesting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_medium"
                android:paddingVertical="@dimen/_10sdp"
                android:elevation="@dimen/_2sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:background="@drawable/player_bg"
                android:backgroundTint="@color/white"
                android:maxLines="2"
                android:text="@{bean.description}"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvCommentaire" />

            <TextView
                android:id="@+id/tvCourtMap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="@dimen/_15sdp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:maxLines="2"
                android:text="Location of the court:"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTesting" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                app:layout_collapseMode="parallax"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCourtMap">

                <androidx.cardview.widget.CardView
                    android:id="@+id/courts_map_view_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="8dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <fragment
                        android:id="@+id/mapView"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp" />
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:maxLines="2"
                android:text="Localisation du tereain"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clMap" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cameraFab"
                android:layout_width="@dimen/_42sdp"
                android:layout_height="@dimen/_42sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_14sdp"
                app:cardBackgroundColor="#F8F8F8"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_2sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/courtMenuFab"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/SquareActionButton">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/camera_image"
                    android:tint="@color/text_light" />

            </androidx.cardview.widget.CardView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/addFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="-8dp"
                android:layout_marginBottom="-14dp"
                android:contentDescription="@string/done"
                android:onClick="@{v->vm.onClick(v)}"
                android:src="@drawable/ic_plus_sign"
                app:backgroundTint="#00BFFF"
                app:fabCustomSize="25dp"
                app:layout_constraintBottom_toBottomOf="@+id/cameraFab"
                app:layout_constraintEnd_toEndOf="@+id/cameraFab"
                app:maxImageSize="15dp"
                app:shapeAppearanceOverlay="@style/RoundActionButton"
                app:tint="@color/white" />

            <androidx.cardview.widget.CardView
                android:id="@+id/courtMenuFab"
                android:layout_width="@dimen/_42sdp"
                android:layout_height="@dimen/_42sdp"
                android:layout_marginEnd="15dp"
                app:cardBackgroundColor="#F8F8F8"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_2sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cameraFab">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/outline_menu_24"
                    android:tint="@color/black_000000" />

            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/courtMenusLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_2sdp"
                app:layout_constraintEnd_toEndOf="@+id/courtMenuFab"
                app:layout_constraintStart_toStartOf="@+id/courtMenuFab"
                app:layout_constraintTop_toBottomOf="@+id/courtMenuFab">


                <androidx.cardview.widget.CardView
                    android:id="@+id/addCourtFavoriteFab"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    app:cardBackgroundColor="@color/games_light_color"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_2sdp"
                    android:onClick="@{v->vm.onClick(v)}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/SquareActionButton">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/outline_star_outline_24"
                        android:tint="@color/grey" />

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/editCourtInfoFab"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    app:backgroundTint="@color/games_light_color"
                    app:cardBackgroundColor="@color/courts_light_color"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/addCourtFavoriteFab"
                    app:shapeAppearanceOverlay="@style/SquareActionButton">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_edit_24"
                        android:tint="@color/grey" />

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/shareCourtFab"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    app:backgroundTint="@color/games_light_color"
                    app:cardBackgroundColor="@color/workouts_light_color"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editCourtInfoFab"
                    app:shapeAppearanceOverlay="@style/SquareActionButton">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/baseline_share_24"
                        android:tint="@color/grey" />

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/removeCourtFab"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    app:cardBackgroundColor="@color/tournaments_light_color"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_2sdp"
                    android:onClick="@{v->vm.onClick(v)}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/shareCourtFab"
                    app:shapeAppearanceOverlay="@style/SquareActionButton">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/outline_delete_24"
                        android:tint="@color/grey" />

                </androidx.cardview.widget.CardView>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>