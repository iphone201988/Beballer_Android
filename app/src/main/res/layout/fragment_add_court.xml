<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.beballer.beballer.ui.player.dash_board.find.game.add_court.AddCourtFragmentVM" />

        <variable
            name="buttonCheck"
            type="Boolean" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.dash_board.find.game.add_court.AddCourtFragment">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/cancelImage"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="@dimen/_25sdp"
            android:onClick="@{v->vm.onClick(v)}"
            android:padding="@dimen/_6sdp"
            android:src="@drawable/back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/TextView.InterMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Add a court"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintBottom_toBottomOf="@+id/cancelImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cancelImage" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCourtName"
            style="@style/TextView.InterMedium"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:text="@string/court_name"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etCourtName"
            style="@style/EditText"
            android:layout_width="0dp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:hint="Ex:Playground Duperre'"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCourtName" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCourtAddress"
            style="@style/TextView.InterMedium"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/court_address"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toStartOf="@+id/etCourtName"
            app:layout_constraintTop_toBottomOf="@+id/etCourtName" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etCourtAddress"
            style="@style/EditText"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/_6sdp"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:hint="Ex:22 rue Duperre' 75009 Paris"
            android:maxLines="1"
            android:onClick="@{v->vm.onClick(v)}"
            app:layout_constraintEnd_toEndOf="@+id/etCourtName"
            app:layout_constraintStart_toStartOf="@+id/etCourtName"
            app:layout_constraintTop_toBottomOf="@+id/tvCourtAddress" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCurrentLocation"
            style="@style/TextView.InterMedium"
            android:gravity="center"
            android:onClick="@{v->vm.onClick(v)}"
            android:paddingVertical="@dimen/_10sdp"
            android:text="@string/use_current_location"
            android:textColor="@color/blue"
            android:textSize="@dimen/_8sdp"
            app:layout_constraintStart_toStartOf="@+id/etCourtName"
            app:layout_constraintTop_toBottomOf="@+id/etCourtAddress" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAccessibility"
            style="@style/TextView.InterMedium"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Accessibility"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toStartOf="@+id/etCourtName"
            app:layout_constraintTop_toBottomOf="@+id/tvCurrentLocation" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etAccessibility"
            style="@style/EditText"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/_6sdp"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:hint="Choose between these proposition"
            android:onClick="@{v->vm.onClick(v)}"
            app:layout_constraintEnd_toEndOf="@+id/etCourtName"
            app:layout_constraintStart_toStartOf="@+id/etCourtName"
            app:layout_constraintTop_toBottomOf="@+id/tvAccessibility" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHoopsCount"
            style="@style/TextView.InterMedium"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/hoops_count"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toStartOf="@+id/etCourtName"
            app:layout_constraintTop_toBottomOf="@+id/etAccessibility" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etHoopsCount"
            style="@style/EditText"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/_6sdp"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:hint="@string/choose_between_these_proposition"
            android:onClick="@{v->vm.onClick(v)}"
            app:layout_constraintEnd_toEndOf="@+id/etCourtName"
            app:layout_constraintStart_toStartOf="@+id/etCourtName"
            app:layout_constraintTop_toBottomOf="@+id/tvHoopsCount" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/nextBtnDivider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            app:dividerColor="#D4D4D4"
            app:layout_constraintBottom_toTopOf="@id/btnNext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnNext"
            style="@style/GreenButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginHorizontal="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/green_btn_bg"
            android:backgroundTint="@{buttonCheck?@color/green:@color/dark_AAB9EF}"
            android:onClick="@{v->vm.onClick(v)}"
            android:text="@string/next"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>